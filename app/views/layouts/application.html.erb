	<![endif]-->
  
</head>
<body data-spy="scroll" data-target=".navbar-custom">
		<div class="preloader">
			<div class="loader-item">
				<%= image_tag("loading.gif", alt: "loader") %>
			</div>
		</div> 
		
		<!-- pattern -->
		<div id="bg_pattern"></div>
		<!-- ./pattern -->
		
		<%= yield %>
		<!-- footer -->
		<footer id="footer">
			<div class="container">
				<div class="text-center">
