	<%= csrf_meta_tags %>
	<% if current_page?(:controller => 'static_pages', :action => 'bpm') %>
	  <script>
	  $(document).ready(function(){            
	  	$("body").backstretch([
	  		"/images/bg-leopard-dark.jpg"
	  		], {duration: 5000, fade: 1000});
	  }); 
	  </script>
	<% else %>
		<script>
		$(document).ready(function(){            
			$("body").backstretch([
				"/images/bg01.jpg"
				], {duration: 5000, fade: 1000});
		}); 
		</script>
	<% end %>
