<% provide(:title, 'Подписаться на новости') %>

  <%= render 'shared/navigation2' %>
  
    <div>
      <div id="footer_min" class="container">
      
        <div class="section-heading">
          <h2>Подписаться на новости компании Бизнес-Оптимизация</h2>
        </div>
        
        <div class="row">
          <!-- contact form -->
          <div class="col-md-6 col-sm-6">
            <div class="contact-form">
              <%= form_tag("/subscribe", method: "post") do %>
                <div class="form-group">
                	<div class="input">
                		<label class="string required">
            			<abbr title="required">*</abbr>Ваше имя</label>
            			<input class="string required form-control" required="required" aria-required="true" type="text" id="name" name="name">
                	</div>
                </div>
                <div class="form-group">
                	<div class="input">
                		<label class="email required">
            			<abbr title="required">*</abbr>Ваш email</label>
            			<input class="string required form-control" required="required" aria-required="true" type="email" id="email" name="email">
                	</div>
                </div>               
                <div class="pull-right"><input type="submit" name="commit" value="Отправить" class="btn btn-custom btn-lg my123">
                </div>
			  <% end %>
            <div class="clearfix"></div>
            </div>
          </div>
          <!-- ./contact form -->
          
        </div>
        <!-- /row -->
                  
      </div>  
